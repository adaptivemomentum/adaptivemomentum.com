.post
  position: relative
  padding-left: 10px
  &:last-child
    padding-bottom: 40px

  .content a
    background: #FFFBCC
    padding: 2px 0;

    // overwrite other hover transition
    &:hover
      color: inherit;
      text-decoration: underline

  hr
    background: #f4f3f3
    border: none
    height: 4px
    width: 70%
    margin: 30px auto

  .date
    top: -1px
    left: -70px
    position: absolute;
    color: #444
    font-size: 14px
    text-align: center
    padding-top: 5px

    span
      display: block

    span:nth-child(1)
      font-size: 16px
      font-weight: 700

#disqus_thread
  border-top: 2px solid #eee
  margin-top: 40px
  padding-top: 40px


// Smaller than standard 960 (devices and browsers)
@media only screen and (max-width: 959px)
  .post .date
    top: 3px
